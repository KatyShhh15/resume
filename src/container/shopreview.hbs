<section>
        {{> shopheader}}
    </section>
<main>
    <div class="row g-3">
        {{#with formBlock}}
            <div class="col-8">
                <h1 class="text">{{header}}</h1>
                    {{#with rating}}
                        <div>{{title}}: {{value}}</div>
                    {{/with}}
                {{#with actionBlock}}
                    <div class="nav nav-tabs">
                        {{#each tabs}}
                            <div class="nav-item">                     
                                <div class="nav-link {{#if isActive}}active{{/if}}">{{text}}</div>
                            </div> 
                        {{/each}}
                    </div>
                    <hr>
                    <div>
                        {{#with report}}
                            <div class="card">
                                <div class="card-body">
                                    <div class="col-8">
                                        {{title}}
                                    </div>
                                    <div class="col-8 my-2">
                                        {{#with button}}
                                            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                        {{/with}}
                    </div>
                {{/with}}
                <hr>
            </div>
            <div class="col-4 gy-2">
                {{#with goodsInfo}}
                    <div class="card">
                        <div class="card-body">
                            <div class="col-3">
                                <img class='card-img' src='{{photo}}'/>                  
                            </div>
                            <div class="col-4 my-2">
                                <h5 class="card-title">{{name}}</h5>
                            </div>
                        </div>
                    </div> 
                    <div class="card">
                        <div class="card-body">
                            <p class="text">{{price}}</p>
                            <div class="text">{{#if inMarket}}Є в наявності{{/if}}</div>
                            <div class="col-5">
                                {{#each buttons}}
                                    <a href="{{link}}"class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-secondary{{/if}}">
                                        {{text}}
                                    </a>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    {{#with seller}}
                        <div class="card">
                            <div class="card-body">
                                <div>{{title}}: <b>{{value}}</b></div>
                            </div>
                        </div>
                    {{/with}}
                {{/with}}
            </div>
            <div class="col-8 gx-2">
                {{#with feedbackBlock}}
                    <h2>{{title}}</h2>
                    {{#each buttons}}
                        <a href="{{link}}"class="btn {{#if isWarning}}btn-warning{{/if}} {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}}">
                            {{text}}
                        </a>
                    {{/each}}
                {{/with}}
            </div>
        {{/with}}
        <br>
        <hr>
        <br>
        <div>
            {{> reviewItem}}
        </div>
        <br>
        <br>
        {{#with service}}
        <div class="card text-bg-success">
            <h2 class="card-header text-center">{{title}}</h2>
            <div class="card-body text-center">
                <p>{{description}}</p>
                {{#each buttons}}
                {{#with this}}
                    <a href="{{link}}"class="btn btn-primary">
                        {{text}}
                    </a>
                {{/with}}
                {{/each}}
            </div>
        </div>
        {{/with}}
    </div>
</main>
    <div>
        {{> shopfooter}}
    </div>