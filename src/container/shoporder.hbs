<div>
    <section>
        {{> shopheader}}
    </section>
    <div>
        <h1 class="text">{{header}}</h1>
    </div>
    <br>
    <br>
    <section>
        <div>
            {{#with contacts_data}}
            <h3 class="text">{{title}}</h3>
            <br>
            {{#each buttons}}
            <button class="btn {{#if isPrimary}}btn-warning{{/if}} {{#if isOutline}}btn-outline-warning{{/if}}">
                <span class="text">{{text}}</span>
            </button>
            {{/each}}
        </div>
<main>
    {{#with form}}
        {{#with input}}
            <div class="row">
                <div class="col-4">
                    {{#with surname}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder={{placeholder}}>
                        <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>
                <div class="col-4">
                    {{#with name}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder={{placeholder}}>
                        <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    {{#with phone}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder={{placeholder}}>
                        <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>
                    <div class="col-4">
                        {{#with email}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder={{placeholder}}>
                            <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                </div>
            </div>
        {{/with}}
        <div class="col-8">
            <hr>
        </div>
        {{#each switch}}
            <div class="form-check form-switch" {{#if isActive}}checked{{/if}}>
                <input type="checkbox" class="form-check-input">
                <label class="form-check-label">{{text}}</label>
            </div>
        {{/each}}
        <div class="col-8">
            <hr>
        </div>
    {{/with}}
</main>
{{/with}}
</section>

<div>
<div class="col-4">
    <section>
        <div class="card">
            <div class="card-body">
                <div class="row gx-5 gy-3">
                {{#each action_block}}
                    <div class="col-9">
                        <button class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}} {{#if isInfo}}btn-info{{/if}}">
                            <span class="text">{{text}}</span>
                        </button>
                    </div>
                {{/each}}
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="card">
            <div class="card-body">
                {{#with total}}
                    <div class="row">
                        {{#each item_list}}
                            <div class="col-9">
                                <div>{{name}}: {{price}}</div>
                            </div>
                        {{/each}}
                    </div>
                    <hr>
                    <div class="row">
                        {{#each additional_info}}
                            <div class="col-9">
                                <div>{{text}}: {{value}}</div>
                            </div>                        
                        {{/each}}
                    </div>
                    <hr>
                    <div class="row">
                        {{#with total_price}}
                            <div class="col-9">
                                <div>{{text}}: {{value}}</div>
                            </div>                        
                        {{/with}}
                    </div>
                    <hr>
                    <div class="row gx-5 gy-3">
                        {{#each button}}
                            <div class="col-9">
                                <button class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isOutline}}btn-outline-primary{{/if}} {{#if isInfo}}btn-info{{/if}}">
                                    <span class="text">{{text}}</span>
                                </button>
                            </div>                        
                        {{/each}}
                    </div>
                {{/with}}
            </div>
        </div>
            
    </section>
</div>
</div>

