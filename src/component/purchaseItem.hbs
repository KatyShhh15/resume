<section>
  {{#each itemList}}
    {{#with this}}
    <hr>
        <div class='row g-3'>
            <div class='col-3'>
              <div>
                <p class='text'>{{number}}</p>
                <h5 class='text'>{{status}}</h5>
              </div>
            </div>
            {{#with amount}}
              <div class='col-2'>
                <div>{{title}}:</div>
                <div>{{value}}</div>
              </div>
            {{/with}}
                <div class='col-4'>
                    {{#each images}}
                        <img class='img' src='{{this}}' />
                    {{/each}}
                </div>
            {{#with button}}
              <div class='col-3'>
                <a href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{/if}}">
                    {{text}}
                </a>
              </div>
            {{/with}}
          </div>
    {{/with}}
  {{/each}}
</section>